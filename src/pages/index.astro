---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';

// Datos de ejemplo para los perfumes
const perfumes = [
    {
        name: 'Étoile du Désert',
        description: 'Una fragancia oriental con notas de sándalo y vainilla.',
        price: 120.00,
        imageUrl: 'https://placehold.co/400x500/FDFBF7/333333?text=Étoile+du+Désert'
    },
    {
        name: 'Oasis de Minuit',
        description: 'Frescura cítrica y floral que evoca un oasis nocturno.',
        price: 95.00,
        imageUrl: 'https://placehold.co/400x500/FDFBF7/333333?text=Oasis+de+Minuit'
    },
    {
        name: 'Sable d\'Or',
        description: 'Aroma amaderado y especiado con un toque de azafrán.',
        price: 150.00,
        imageUrl: 'https://placehold.co/400x500/FDFBF7/333333?text=Sable+d\'Or'
    },
    {
        name: 'Fleur de Lune',
        description: 'Un bouquet floral blanco, delicado y luminoso.',
        price: 110.00,
        imageUrl: 'https://placehold.co/400x500/FDFBF7/333333?text=Fleur+de+Lune'
    },
    {
        name: 'Ombre Nomade',
        description: 'El icónico perfume de Louis Vuitton, intenso y misterioso con notas de oud.',
        price: 350.00,
        imageUrl: '/ombre-nomade.jpg'
    }
];
---
<Layout title="Sahara Perfumes - Catálogo">
	<div class="catalog-grid">
		{perfumes.map(perfume => (
			<ProductCard
				name={perfume.name}
				description={perfume.description}
				price={perfume.price}
				imageUrl={perfume.imageUrl}
			/>
		))}
	</div>
</Layout>

<style>
	.catalog-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}
</style>