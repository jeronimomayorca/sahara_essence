---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Sahara Perfumes - Un catálogo de fragancias exquisitas." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400&display=swap" rel="stylesheet">
		<style is:global>
			:root {
				--color-bg: #FDFBF7;
				--color-text: #333333;
				--color-primary: #C0A080; /* Un dorado/bronce más suave */
				--color-card-bg: #FFFFFF;
				--font-heading: 'Playfair Display', serif;
				--font-body: 'Roboto', sans-serif;
			}
			html {
				font-family: var(--font-body);
				background-color: var(--color-bg);
				color: var(--color-text);
				scroll-behavior: smooth;
			}
			body {
				margin: 0;
				padding: 0;
			}
			h1, h2, h3 {
				font-family: var(--font-heading);
				color: var(--color-text);
			}
		</style>
	</head>
	<body>
		<header>
			<h1>Sahara Perfumes</h1>
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<p>&copy; {new Date().getFullYear()} Sahara Perfumes. Todos los derechos reservados.</p>
		</footer>
		<style>
			header, footer {
				text-align: center;
				padding: 2rem 1rem;
				max-width: 800px;
				margin: 0 auto;
			}
			header h1 {
				font-size: 2.5rem;
				margin: 0;
				letter-spacing: 1px;
				font-weight: 700;
			}
			footer {
				margin-top: 4rem;
				font-size: 0.9rem;
				color: #777;
			}
			main {
				padding: 1rem;
				max-width: 1200px;
				margin: 0 auto;
			}
		</style>
	</body>
</html>
